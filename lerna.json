{
  "ci": false,
  "version": "1.2.2",
  "command": {
    "publish": {
      "allowBranch": [
        "main"
      ],
      "message": "chore(release): publish %s",
      "conventionalCommits": true
    }
  },
  "useWorkspaces": false,
  "packages": [
    "."
  ],
  "ignoreChanges": [
    "**/changelog.md",
    "**/CHANGELOG.md",
    "**/package-lock.json",
    "**/yarn.lock",
    "**/test/**",
    "lerna.json",
    "readme.md"
  ]
}
