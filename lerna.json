{
  "ci": false,
  "packages": ["packages/*"],
  "version": "1.0.0",
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "publish": {
      "allowBranch": ["master"],
      "message": "chore(release): publish %s",
      "conventionalCommits": true
    }
  },
  "ignoreChanges": [
    "**/changelog.md",
    "**/CHANGELOG.md",
    "**/package-lock.json",
    "**/yarn.lock",
    "**/test/**",
    "lerna.json",
    "readme.md"
  ]
}
